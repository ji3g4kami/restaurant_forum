<div class="container">
  <div class="row">
    <h1>餐廳後台</h1>
    <table class="table table-hover"> 
      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= link_to 'Show', admin_restaurant_path(restaurant) %>
        <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
        <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @restaurants %><br>
    <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
  </div>
</div>